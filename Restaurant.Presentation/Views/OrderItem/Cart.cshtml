@using Restaurant.DTOs.OrderDTOs
@model List<CartItemDTO>
@{
    ViewData["Title"] = "Shopping Cart";
    Layout = "_Layout";
}

<style>
    .cart-container {
        padding: 2rem 0;
    }

    .page-header {
        text-align: center;
        margin-bottom: 3rem;
    }

        .page-header h1 {
            color: #2c3e50;
            font-weight: 700;
            font-size: 2.2rem;
        }

    /* Empty State */
    .empty-cart {
        background: white;
        border-radius: 12px;
        padding: 4rem 2rem;
        text-align: center;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    }

    .empty-cart-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
        color: #95a5a6;
    }

    .empty-cart h4 {
        color: #2c3e50;
        font-weight: 600;
        font-size: 1.3rem;
        margin-bottom: 0.5rem;
    }

    .empty-cart p {
        color: #7f8c8d;
        margin-bottom: 2rem;
    }

    .empty-cart a {
        background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
        color: white;
        border: none;
        padding: 0.85rem 2rem;
        border-radius: 8px;
        font-weight: 600;
        text-decoration: none;
        display: inline-block;
        transition: all 0.3s ease;
    }

        .empty-cart a:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(39, 174, 96, 0.3);
        }

    /* Cart Table Container */
    .cart-table-container {
        background: white;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
        overflow-x: auto;
    }

    /* Table Styling */
    .cart-table {
        margin-bottom: 0;
        border-collapse: collapse;
    }

        .cart-table thead {
            background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
            color: white;
        }

            .cart-table thead th {
                border: none;
                padding: 1.2rem;
                font-weight: 700;
                font-size: 0.95rem;
                text-align: left;
                vertical-align: middle;
            }

        .cart-table tbody tr {
            border-bottom: 2px solid #ecf0f1;
            transition: all 0.3s ease;
        }

            .cart-table tbody tr:hover {
                background: linear-gradient(90deg, #fef5f5 0%, #fff8f8 100%);
            }

        .cart-table tbody td {
            padding: 1.2rem;
            vertical-align: middle;
            color: #2c3e50;
            font-size: 0.95rem;
        }

    .item-name {
        font-weight: 600;
        color: #2c3e50;
    }

    .unit-price {
        color: #27ae60;
        font-weight: 600;
    }

    .quantity-cell {
        text-align: center;
        font-weight: 600;
    }

    .total-price {
        color: #e74c3c;
        font-weight: 700;
        font-size: 1.1rem;
    }

    .action-cell {
        text-align: center;
    }

    /* Remove Button */
    .btn-remove {
        background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        color: white;
        border: none;
        padding: 0.6rem 1rem;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.8rem;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 0.3rem;
    }

        .btn-remove:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(231, 76, 60, 0.3);
            background: linear-gradient(135deg, #c0392b 0%, #a93226 100%);
        }

    /* Summary Section */
    .cart-summary {
        background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
        border-radius: 12px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    }

    .summary-title {
        color: #2c3e50;
        font-weight: 600;
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .summary-title::before {
            content: '';
            width: 4px;
            height: 24px;
            background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
            border-radius: 2px;
        }

    .summary-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0.8rem 0;
        border-bottom: 1px solid #ecf0f1;
        color: #2c3e50;
    }

        .summary-row:last-child {
            border-bottom: none;
            padding-top: 1rem;
            border-top: 2px solid #e74c3c;
            font-weight: 700;
            font-size: 1.2rem;
            color: #27ae60;
        }

    .summary-label {
        font-weight: 600;
        color: #555;
    }

    .summary-value {
        font-weight: 700;
        color: #2c3e50;
    }

    /* Checkout Button */
    .checkout-section {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .btn-checkout {
        flex: 1;
        padding: 1rem 2rem;
        background: linear-gradient(135deg, #27ae60 0%, #229954 100%);
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

        .btn-checkout:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(39, 174, 96, 0.3);
            background: linear-gradient(135deg, #229954 0%, #1e8449 100%);
        }

    .btn-continue-shopping {
        flex: 1;
        padding: 1rem 2rem;
        background: white;
        color: #95a5a6;
        border: 2px solid #95a5a6;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
    }

        .btn-continue-shopping:hover {
            background: #95a5a6;
            color: white;
            border-color: #95a5a6;
        }

    /* Info Box */
    .info-box {
        background: linear-gradient(135deg, #d5f4e6 0%, #c8f0e0 100%);
        border-left: 4px solid #27ae60;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 2rem;
        color: #27ae60;
    }

        .info-box p {
            margin: 0;
            font-size: 0.9rem;
            font-weight: 500;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .page-header h1

    {
        font-size: 1.8rem;
    }

    .cart-table-container {
        padding: 1rem;
    }

    .cart-table thead th {
        padding: 0.8rem;
        font-size: 0.8rem;
    }

    .cart-table tbody td {
        padding: 0.8rem;
        font-size: 0.8rem;
    }

    .checkout-section {
        flex-direction: column;
    }

    .btn-checkout,
    .btn-continue-shopping {
        width: 100%;
    }

    .summary-row {
        font-size: 0.9rem;
    }

    }

    @@keyframes slideDown {
        from

    {
        opacity: 0;
        transform: translateY(-20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .cart-table-container,
    .cart-summary {
        animation: slideDown 0.6s ease;
    }
</style>

<div class="cart-container">
    <div class="page-header">
        <h1>Shopping Cart</h1>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-cart">
            <div class="empty-cart-icon">🛒</div>
            <h4>Your Cart is Empty</h4>
            <p>Looks like you haven't added anything to your cart yet. Start exploring our menu!</p>
            <a asp-controller="Home" asp-action="Index">Continue Shopping</a>
        </div>
    }
    else
    {
        <div class="info-box">
            <p>You have @Model.Count() item(s) in your cart. Review and proceed to checkout when ready.</p>
        </div>

        <div class="cart-table-container">
            <table class="cart-table">
                <thead>
                    <tr>
                        <th style="width: 35%;">Item Name</th>
                        <th style="width: 15%;">Unit Price</th>
                        <th style="width: 15%;">Quantity</th>
                        <th style="width: 20%;">Total</th>
                        <th style="width: 15%;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="item-name">@item.MenuItemName</td>
                            <td class="unit-price">@item.UnitPrice.ToString("C")</td>
                            <td class="quantity-cell">@item.Quantity</td>
                            <td class="total-price">@item.Total.ToString("C")</td>
                            <td class="action-cell">
                                <form asp-controller="OrderItem" asp-action="RemoveFromCart" method="post" style="display: inline;">
                                    <input type="hidden" name="orderItemId" value="@item.OrderItemId" />
                                    <button type="submit" class="btn-remove">Remove</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Cart Summary -->
        <div class="cart-summary">
            <div class="summary-title">Order Summary</div>
            <div class="summary-row">
                <span class="summary-label">Subtotal:</span>
                <span class="summary-value">@Model.Sum(i => i.Total).ToString("C")</span>
            </div>
            <div class="summary-row">
                <span class="summary-label">Items:</span>
                <span class="summary-value">@Model.Count()</span>
            </div>
            <div class="summary-row">
                <span class="summary-label">Grand Total:</span>
                <span class="summary-value">@Model.Sum(i => i.Total).ToString("C")</span>
            </div>
        </div>

        <!-- Checkout Buttons -->
        <div class="checkout-section">
            <form asp-controller="Order" asp-action="Checkout" method="post" style="flex: 1;">
                <button type="submit" class="btn-checkout" style="width: 100%;">Proceed to Checkout</button>
            </form>
            <a asp-controller="Home" asp-action="Index" class="btn-continue-shopping">Continue Shopping</a>
        </div>
    }
</div>