@model Restaurant.DTOs.MenuItemDTOs.CreateMenuItemDTO
@{
    ViewData["Title"] = "Create Menu Item";
}

<style>
    .create-container {
        padding: 2rem 0;
    }

    .page-title {
        text-align: center;
        margin-bottom: 3rem;
    }

        .page-title h1 {
            color: #2c3e50;
            font-weight: 700;
            font-size: 2.2rem;
            margin-bottom: 0.5rem;
        }

    .content-wrapper {
        background: white;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

    /* Form Section */
    .form-section {
        padding: 1.5rem;
    }

        .form-section h3 {
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 1.5rem;
            font-size: 1.3rem;
        }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-floating > .form-control,
    .form-floating > .form-select {
        background-color: #f8f9fa;
        border: 2px solid #ecf0f1;
        border-radius: 8px;
        padding: 1rem 0.75rem;
        font-size: 0.95rem;
        transition: all 0.3s ease;
    }

        .form-floating > .form-control:focus,
        .form-floating > .form-select:focus {
            border-color: #e74c3c;
            background-color: white;
            box-shadow: 0 0 0 3px rgba(231, 76, 60, 0.1);
            outline: none;
        }

    .form-floating > label {
        color: #2c3e50;
        font-weight: 600;
        font-size: 0.95rem;
    }

    /* File Upload */
    .file-upload-section {
        margin-bottom: 2rem;
    }

    .file-upload-label {
        display: block;
        margin-bottom: 0.75rem;
        color: #2c3e50;
        font-weight: 600;
        font-size: 0.95rem;
    }

    .form-control[type="file"] {
        background-color: #f8f9fa;
        border: 2px dashed #ecf0f1;
        border-radius: 8px;
        padding: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .form-control[type="file"]:hover {
            border-color: #e74c3c;
            background-color: #fff5f5;
        }

        .form-control[type="file"]:focus {
            border-color: #e74c3c;
            background-color: white;
            outline: none;
        }

    /* Preview Section */
    .preview-section {
        padding: 1.5rem;
        background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
        border-radius: 12px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        min-height: 400px;
    }

    .preview-title {
        color: #2c3e50;
        font-weight: 600;
        margin-bottom: 1.5rem;
        font-size: 1.1rem;
    }

    #previewImage {
        max-width: 100%;
        max-height: 350px;
        border-radius: 10px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        object-fit: cover;
        display: none;
    }

        #previewImage.active {
            display: block;
        }

    .preview-placeholder {
        color: #95a5a6;
        font-size: 3rem;
        margin-bottom: 1rem;
    }

    .preview-text {
        color: #7f8c8d;
        text-align: center;
        font-size: 0.95rem;
    }

    /* Validation Error */
    .validation-error {
        color: #e74c3c;
        font-size: 0.875rem;
        margin-top: 0.3rem;
        display: block;
    }

    /* Buttons */
    .button-group {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
        justify-content: flex-start;
    }

    .btn-submit {
        padding: 0.85rem 2rem;
        background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(231, 76, 60, 0.3);
            background: linear-gradient(135deg, #c0392b 0%, #a93226 100%);
        }

    .btn-back {
        padding: 0.85rem 2rem;
        background: #95a5a6;
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-back:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(149, 165, 166, 0.3);
            background: #7f8c8d;
        }

    /* Responsive */
   

  

    .content-wrapper {
        animation: slideDown 0.6s ease;
    }
</style>

<div class="create-container">
    <div class="page-title">
        <h1>Create New Menu Item</h1>
    </div>

    <div class="content-wrapper">
        <div class="row g-4">
            <!-- Form Section -->
            <div class="col-12 col-lg-6">
                <div class="form-section">
                    <h3>Item Details</h3>
                    <form asp-action="Create" enctype="multipart/form-data" method="post">
                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" required placeholder="Enter item name">
                            <label asp-for="Name">Item Name</label>
                            <span asp-validation-for="Name" class="validation-error"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Price" class="form-control" type="number" step="0.01" placeholder="0.00">
                            <label asp-for="Price">Price</label>
                            <span asp-validation-for="Price" class="validation-error"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="PreparationTime" class="form-control" type="number" placeholder="Minutes">
                            <label asp-for="PreparationTime">Preparation Time (minutes)</label>
                            <span asp-validation-for="PreparationTime" class="validation-error"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="DailyOrderCount" class="form-control" type="number" placeholder="Count">
                            <label asp-for="DailyOrderCount">Daily Order Limit</label>
                            <span asp-validation-for="DailyOrderCount" class="validation-error"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select">
                                <option value="">-- Select Category --</option>
                            </select>
                            <label asp-for="CategoryId">Category</label>
                            <span asp-validation-for="CategoryId" class="validation-error"></span>
                        </div>

                        <div class="file-upload-section">
                            <label class="file-upload-label">Item Image</label>
                            <input class="form-control" asp-for="ImageFile" type="file" accept="image/*">
                        </div>

                        <div class="button-group">
                            <a class="btn-back" asp-controller="MenuItem" asp-action="Index">Back to List</a>
                            <button type="submit" class="btn-submit">Create Item</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Preview Section -->
            <div class="col-12 col-lg-6">
                <div class="preview-section">
                    <div class="preview-title">Image Preview</div>
                    <img id="previewImage" class="active" />
                    <div id="previewPlaceholder" class="preview-text">
                        <div class="preview-placeholder">📸</div>
                        <p>Select an image to preview</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.js"></script>
    <script>
        const previewImage = document.getElementById('previewImage');
        const previewPlaceholder = document.getElementById('previewPlaceholder');
        const fileInput = document.getElementById('ImageFile');

        fileInput.addEventListener('change', function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    previewImage.src = e.target.result;
                    previewImage.classList.add('active');
                    previewPlaceholder.style.display = 'none';
                };
                reader.readAsDataURL(file);
            }
        });
    </script>
}