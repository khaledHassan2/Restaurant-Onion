@model Restaurant.DTOs.MenuCategoryDTOs.CreateMenuCategoryDTO
@{
    ViewData["Title"] = "Create Category";
}

<style>
    .form-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: calc(100vh - 200px);
        padding: 2rem 0;
    }

    .form-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.12);
        padding: 3rem;
        width: 100%;
        max-width: 500px;
        animation: slideDown 0.6s ease;
    }

    .form-header {
        margin-bottom: 2rem;
    }

        .form-header h2 {
            color: #2c3e50;
            font-weight: 700;
            font-size: 1.8rem;
            margin-bottom: 0.5rem;
        }

        .form-header p {
            color: #7f8c8d;
            font-size: 0.95rem;
        }

    .form-group {
        margin-bottom: 1.5rem;
    }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            color: #2c3e50;
            font-weight: 600;
            font-size: 0.95rem;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 0.85rem 1rem;
            border: 2px solid #ecf0f1;
            border-radius: 8px;
            font-size: 0.95rem;
            font-family: inherit;
            transition: all 0.3s ease;
            background-color: #f8f9fa;
        }

            .form-group input:focus,
            .form-group textarea:focus {
                outline: none;
                border-color: #e74c3c;
                background-color: white;
                box-shadow: 0 0 0 3px rgba(231, 76, 60, 0.1);
            }

        .form-group textarea {
            resize: vertical;
            min-height: 120px;
        }

    .validation-error {
        color: #e74c3c;
        font-size: 0.875rem;
        margin-top: 0.3rem;
        display: block;
    }

    .validation-summary {
        background-color: #fadbd8;
        border: 1px solid #f5b7b1;
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1.5rem;
        color: #c0392b;
    }

    .btn-container {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }

    .submit-btn {
        flex: 1;
        padding: 0.85rem;
        background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .submit-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(231, 76, 60, 0.3);
            background: linear-gradient(135deg, #c0392b 0%, #a93226 100%);
        }

        .submit-btn:active {
            transform: translateY(0);
        }

    .back-link {
        display: inline-block;
        margin-top: 1.5rem;
        color: #e74c3c;
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .back-link:hover {
            color: #c0392b;
            text-decoration: underline;
        }

    }
</style>

<div class="form-container">
    <div class="form-card">
        <div class="form-header">
            <h2>Create New Category</h2>
            <p>Add a new menu category to your restaurant</p>
        </div>

        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

            <div class="form-group">
                <label asp-for="Name">Category Name</label>
                <input asp-for="Name" class="form-control" placeholder="e.g., Appetizers, Main Course" />
                <span asp-validation-for="Name" class="validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description">Description</label>
                <textarea asp-for="Description" class="form-control" placeholder="Describe this category..."></textarea>
                <span asp-validation-for="Description" class="validation-error"></span>
            </div>

            <div class="btn-container">
                <button type="submit" class="submit-btn">Create Category</button>
            </div>
        </form>

        <a asp-action="Index" class="back-link">Back to Categories</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}