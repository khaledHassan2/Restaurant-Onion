@using Restaurant.DTOs.OrderDTOs
@model List<CartItemDTO>

<h2>My Cart</h2>

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Item</th>
                <th>Unit Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MenuItemName</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@item.Total.ToString("C")</td>
                    <td>
                        <form asp-action="RemoveFromCart" asp-controller="Order" method="post" class="d-inline">
                            <input type="hidden" name="menuItemId" value="@item.MenuItemId" />
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-end"><strong>Grand Total:</strong></td>
                <td colspan="2">
                    @Model.Sum(i => i.Total).ToString("C")
                </td>
            </tr>
        </tfoot>
    </table>

    <a href="/Order/Checkout" class="btn btn-success">Proceed to Checkout</a>
}
