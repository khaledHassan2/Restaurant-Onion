@model IEnumerable<Restaurant.Models.Order>
@{
    ViewData["Title"] = "My Orders";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="fw-bold text-center mb-4">🧾 My Orders</h2>

    @if (TempData["InfoMessage"] != null)
    {
        <div class="alert alert-info text-center">@TempData["InfoMessage"]</div>
    }

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive shadow-sm rounded-3">
            <table class="table table-hover align-middle">
                <thead class="table-primary">
                    <tr>
                        <th>#</th>
                        <th>Status</th>
                        <th>Type</th>
                        <th>Discount</th>
                        <th>Tax %</th>
                        <th>Total Items</th>
                        <th>Last Update</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        string statusColor = order.Status switch
                        {
                            Restaurant.Models.OrderStatus.Pending => "warning",
                            Restaurant.Models.OrderStatus.Confirmed => "info",
                            Restaurant.Models.OrderStatus.Ready => "primary",
                            Restaurant.Models.OrderStatus.Delivered => "success",
                            Restaurant.Models.OrderStatus.Cancelled => "danger",
                            _ => "secondary"
                        };

                        <tr>
                            <td>@order.Id</td>
                            <td>
                                <span class="badge bg-@statusColor px-3 py-2">@order.Status</span>
                            </td>
                            <td>@order.Type</td>
                            <td>@order.Discount.ToString("0.00")</td>
                            <td>@order.TaxPercent %</td>
                            <td>@(order.Items?.Count() ?? 0)</td>
                            <td>@order.LastStatusChange</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="fa fa-eye me-1"></i> View
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center text-muted mt-4">
            <i class="fa fa-box-open fa-3x mb-3 text-secondary"></i>
            <p>No orders found.</p>
        </div>
    }
</div>
