@model Restaurant.DTOs.OrderDTOs.CreateOrderDTO

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>


<div class="container mt-4">
    <div class="card shadow-sm rounded">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">🧾 Update New Order</h4>
        </div>

        <div class="card-body">
            <form asp-action="Update" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <!-- Order Type -->
                    <div class="col-md-6">
                        <label asp-for="Type" class="form-label fw-semibold"></label>
                        <select asp-for="Type" class="form-select"
                                asp-items="Html.GetEnumSelectList<Restaurant.Models.OrderType>()">
                            <option value="">-- Select Order Type --</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>

                    <!-- Order Status -->
                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label fw-semibold"></label>
                        <select asp-for="Status" class="form-select"
                                asp-items="Html.GetEnumSelectList<Restaurant.Models.OrderStatus>()">
                            <option value="">-- Select Status --</option>
                        </select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <!-- Delivery Address -->
                    <div class="col-md-12">
                        <label asp-for="DeliveryAddress" class="form-label fw-semibold"></label>
                        <input asp-for="DeliveryAddress" class="form-control" placeholder="Enter delivery address..." />
                        <span asp-validation-for="DeliveryAddress" class="text-danger"></span>
                    </div>

                    <!-- Tax Percent -->
                    <div class="col-md-4">
                        <label asp-for="TaxPercent" class="form-label fw-semibold"></label>
                        <input asp-for="TaxPercent" class="form-control" type="number" step="0.1" />
                        <span asp-validation-for="TaxPercent" class="text-danger"></span>
                    </div>

                    <!-- Discount -->
                    <div class="col-md-4">
                        <label asp-for="Discount" class="form-label fw-semibold"></label>
                        <input asp-for="Discount" class="form-control" type="number" step="0.1" />
                        <span asp-validation-for="Discount" class="text-danger"></span>
                    </div>

                    <!-- Customer ID -->
                    <div class="col-md-4">
                        <label asp-for="CustomerId" class="form-label fw-semibold"></label>
                        <input asp-for="CustomerId" class="form-control" placeholder="Enter customer ID" />
                        <span asp-validation-for="CustomerId" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check-circle"></i> Create Order
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2 px-4">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>


